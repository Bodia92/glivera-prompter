<link rel="stylesheet" href="{{ 'review.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'review.css' | asset_url | stylesheet_tag }}</noscript>

{%- style -%}
  .review {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .review {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}


<section class="section review">
  <div class="section_in">
    {%- for block in section.blocks -%}
      <div class="review_body">
        {%- if block.settings.image != blank -%}
          <div class="review_img_w">
            {{ block.settings.image | image_url: width: 380 | image_tag:
              loading: 'lazy',
              widths: '275, 550, 710, 1420',
              class: 'cover_img'
            }}
          </div>
        {%- endif -%}
        <div class="review_decor_left">
          {{ images['review_decor_1.png'] | image_url: width: 80 | image_tag:
            class: 'cover_img'
          }}
        </div>
        <div class="review_decor_right">
          {{ images['review_decor_2.png'] | image_url: width: 80 | image_tag:
            class: 'cover_img'
          }}
        </div>
        <div class="review_content">
          {%- if block.settings.text -%}
            <div class="review_content_text">
              <p>{{ block.settings.text }}</p>
            </div>
          {%- endif -%}
        </div>
      </div>
    {%- endfor -%}
  </div>
</section>

{% schema %}
{
  "name": "Reviews",
  "class": "section",
  "tag": "section",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 150,
      "step": 10,
      "unit": "px",
      "label": "padding_top",
      "default": 150
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 150,
      "step": 10,
      "unit": "px",
      "label": "padding_bottom",
      "default": 150
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "text",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.multicolumn.blocks.column.settings.image.label"
        },
        {
          "type": "text",
          "id": "text",
          "default": "Step 1:",
          "label": "t:sections.multicolumn.blocks.column.settings.title.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Ident Column",
      "blocks": [
        {
          "type": "text"
        }
      ]
    }
  ]
}
{% endschema %}
