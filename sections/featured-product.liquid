{{ 'product-preview.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .product_preview {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .product_preview {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="section">
  <div class="section_in">
    <div class="product_preview">
      <div class="product_preview_col slider_mod">
        <div class="product_preview_slider">
          {%- for block in section.blocks -%}
            <a class="product_preview_slider_item" href="{{ block.settings.image }}">
              <div class="product_preview_slider_img">
                {{ block.settings.image | image_url: width: 380 | image_tag:
                  loading: 'lazy',
                  widths: '275, 550, 710, 1420',
                  class: 'cover_img'
                }}
              </div>
            </a>
          {%- endfor -%}
        </div>
        <div class="product_preview_nav">
          {%- for block in section.blocks -%}
            <div class="product_preview_nav_item">
              <div class="product_preview_nav_item_in">
                <div class="product_preview_nav_img">
                  {{ block.settings.image | image_url: width: 380 | image_tag:
                    loading: 'lazy',
                    widths: '275, 550, 710, 1420',
                    class: 'cover_img'
                  }}
                </div>
              </div>
            </div>
          {%- endfor -%}
        </div>
      </div>
      <div class="product_preview_col content_mod">
        <div class="section_subtitle v2_mod align_mod offset_mod">ALL-IN-ONE-SYSTEM</div>
        <h2 class="section_title align_mod sm_mod offset_2_mod">Original Prompter Kit</h2>
        <div class="product_price_wrap">
          <div class="product_price old_mod">Was $79.99 </div>
          <div class="product_price text_mod">Get It Today For</div>
          <div class="product_price current_mod">Just $39.99</div>
        </div>
        <div class="product_text">Using dry-erase markers, jot down prompts to keep you focused on the most important details of your content. Shoot noticeably cleaner videos with less re-takes! Our Prompter Board is the perfect tool for anyone creating content!</div>
        <div class="product_info">
          <div class="product_info_title">Prompter Kit Includes: </div>
          <div class="product_info_list">
            <div class="product_info_item">1 <strong>Medium</strong> (12X12) Prompter Board</div>
            <div class="product_info_item">3 GripFit Lens Attachments Fitting Virtually <strong>All Lens Sizes</strong></div>
            <div class="product_info_item">2 Black Dry-Erase Markers</div>
          </div>
        </div>
        <div class="product_bottom">
          <div class="product_quantity">
            <select class="product_quantity_select">
              <option>Qty: 01</option>
              <option>Qty: 02</option>
              <option>Qty: 03</option>
            </select>
          </div>
          <div class="btn_wrap"><a class="btn_base" href="#">Add To Cart </a></div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Product Reviews",
  "class": "section",
  "tag": "section",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "padding_bottom",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "text",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.multicolumn.blocks.column.settings.image.label"
        },
        {
          "type": "text",
          "id": "text",
          "default": "Step 1:",
          "label": "t:sections.multicolumn.blocks.column.settings.title.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Ident Column",
      "blocks": [
        {
          "type": "text"
        }
      ]
    }
  ]
}
{% endschema %}